# API Configuration
API_URL=YOUR_API_ENDPOINT_HERE
API_MAX_RETRIES=3
API_RETRY_DELAY=2.0

# MongoDB Configuration
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/YOUR_DATABASE?retryWrites=true&w=majority&appName=Cluster0
MONGODB_DB_NAME=your_database_name
MONGODB_COLLECTION_NAME=people
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password

# Image Processing
IMAGES_DIR=images
SUPPORTED_EXTENSIONS=.jpg,.jpeg,.png,.bmp,.gif

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s
